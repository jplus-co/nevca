<ul class="board-member-list">
  {% for item in props %}
    <li class="board-member-list__item">
      <a class="block reset-anchor" href="{{item.board_member_link}}">
        <div class="board-member-list__image-mask">
          {% if item.image %}
            <img class="board-member-list__image" src="{{ Image(item.image).src }}" alt="{{ item.title }}">
          {% endif %}
        </div>
        <h4 class="board-member-list__name">{{ item.title }}</h4>
        <h5 class="board-member-list__meta">{{ item.company }}</h5>
      </a>
    </li>
  {% endfor %}
</ul>
